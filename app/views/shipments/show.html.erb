<%- model_class = Shipment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:delivery_date) %>:</strong></dt>
  <dd><%= @shipment.delivery_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:storage_number) %>:</strong></dt>
  <dd><%= @shipment.storage_number %></dd>
  <dt><strong>Products:</strong></dt>
  <dd>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Description</th>
          <th>Value</th>
        </tr>
      </thead>

      <tbody>
        <% @shipment.products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td><%= product.description %></td>
            <td><%= product.value %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              shipments_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_shipment_path(@shipment), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              shipment_path(@shipment),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
